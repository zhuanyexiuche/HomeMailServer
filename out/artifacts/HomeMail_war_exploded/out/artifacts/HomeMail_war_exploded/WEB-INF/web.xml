<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>ReadQuestionServlet</servlet-name>
        <servlet-class>main.http.ReadQuestionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReadResponseServlet</servlet-name>
        <servlet-class>main.http.ReadResponseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WriteResponseServlet</servlet-name>
        <servlet-class>main.http.WriteResponseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WriteQuestionServlet</servlet-name>
        <servlet-class>main.http.WriteQuestionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WriteClapServlet</servlet-name>
        <servlet-class>main.http.WriteClapServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReadClapServlet</servlet-name>
        <servlet-class>main.http.ReadClapServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReadOpenIDServlet</servlet-name>
        <servlet-class>main.http.ReadOpenIDServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WriteSecretServlet</servlet-name>
        <servlet-class>main.http.WriteSecretServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReadSecretServlet</servlet-name>
        <servlet-class>main.http.ReadSecretServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WriteSecretCommentServlet</servlet-name>
        <servlet-class>main.http.WriteSecretCommentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReadSecretCommentServlet</servlet-name>
        <servlet-class>main.http.ReadSecretCommentServlet</servlet-class>
    </servlet>



    <servlet-mapping>
        <servlet-name>ReadQuestionServlet</servlet-name>
        <!--浏览器中输入的url，可以随意取名  但是注意加"/" -->
        <url-pattern>/readQuestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReadResponseServlet</servlet-name>
        <url-pattern>/readResponse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WriteResponseServlet</servlet-name>
        <url-pattern>/writeResponse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WriteQuestionServlet</servlet-name>
        <url-pattern>/writeQuestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WriteClapServlet</servlet-name>
        <url-pattern>/writeClap</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReadClapServlet</servlet-name>
        <url-pattern>/readClap</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReadOpenIDServlet</servlet-name>
        <url-pattern>/readOpenID</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WriteSecretServlet</servlet-name>
        <url-pattern>/writeSecret</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReadSecretServlet</servlet-name>
        <url-pattern>/readSecret</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WriteSecretCommentServlet</servlet-name>
        <url-pattern>/writeSecretComment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReadSecretCommentServlet</servlet-name>
        <url-pattern>/readSecretComment</url-pattern>
    </servlet-mapping>
</web-app>